#!/usr/bin/env ruby

require 'rsense/client/daemon'
require "jruby-jars"
require "pathname"

daemon = Rsense::Client::Daemon.new(ARGV[1..-1])

if ARGV[0] == 'start'
  daemon.start
elsif ARGV[0] == 'stop'
  daemon.stop
elsif ARGV[0] == 'restart'
  daemon.stop
  daemon.start
else
  STDERR.puts "Usage: tts_main.rb <start|stop|restart>"
  exit!
end
